{
	"name": "numbers",
	"version": "0.1.0",
	"description": "Numbers is simple interactive radix converter.",
	"scripts": {
		"lint": "eslint src/**/*.{ts,js,svelte}",
		"check-types": "tsc --noEmit true",
		"test": "jest --config ./jest.config.json --coverage",
		"dev": "svelte-kit dev",
		"dev:expose": "svelte-kit dev --host --port 5555",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"prepare": "git config --local core.hooksPath .githooks",
		"release": "standard-version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ericrovell/numbers.git"
	},
	"keywords": [
		"numbers",
		"math",
		"radix",
		"numeral bases",
		"education"
	],
	"author": "Eric Rovell",
	"types": "index.d.ts",
	"homepage": "https://github.com/ericrovell/numbers.git#readme",
	"directories": {
		"test": "tests"
	},
	"engines": {
		"node": ">=14.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.0-next.20",
		"@sveltejs/kit": "^1.0.0-next.179",
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"eslint": "^7.32.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"jest": "^27.2.4",
		"lint-staged": "^11.2.0",
		"rollup": "^2.58.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"simple-git-hooks": "^2.6.1",
		"standard-version": "^9.3.1",
		"svelte": "^3.43.1",
		"svelte-preprocess": "^4.9.7",
		"ts-jest": "^27.0.5",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3",
		"typescript-plugin-css-modules": "^3.4.0",
		"vite": "^2.6.2"
	},
	"type": "module",
	"dependencies": {
		"@ericrovell/radix": "^0.4.0"
	},
	"simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint"
  }
}
